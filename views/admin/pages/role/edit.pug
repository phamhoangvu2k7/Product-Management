extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    h1(class="mb-4") Chỉnh sửa nhóm quyền 

    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`${prefixAdmin}/role/edit/${data.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )

        div(class="form-group") 
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required 
                value=data.title
            )
    
        div(class="form-group") 
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5" 
            ) #{data.description}
        
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
